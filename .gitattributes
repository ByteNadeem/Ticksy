# Force GitHub to recognize this as a Python/Django project
* linguist-language=Python

# Explicitly mark Python files
*.py linguist-language=Python linguist-detectable=true

# Mark ALL CSS files as vendored (third-party) to exclude from stats
*.css linguist-vendored
staticfiles/** linguist-vendored
static/css/** linguist-vendored

# Mark Django admin files as vendored
staticfiles/admin/** linguist-vendored

# Mark JavaScript as vendored too
*.js linguist-vendored
staticfiles/admin/**/*.js linguist-vendored

# Mark HTML templates as vendored to prioritize Python
*.html linguist-vendored
templates/** linguist-vendored
**/templates/** linguist-vendored

# Keep only Python files for language detection
*.py linguist-detectable=true
manage.py linguist-language=Python
**/models.py linguist-language=Python
**/views.py linguist-language=Python
**/urls.py linguist-language=Python
**/settings.py linguist-language=Python
**/admin.py linguist-language=Python
**/forms.py linguist-language=Python
**/apps.py linguist-language=Python

# Override - force the entire repo to be considered Python
* linguist-language=Python
