# Django/Python project language detection
*.py linguist-language=Python

# Mark Django admin static files as vendored (third-party)
staticfiles/admin/** linguist-vendored
staticfiles/admin/* linguist-vendored

# Mark any CSS in staticfiles/admin as vendored
staticfiles/admin/**/*.css linguist-vendored
staticfiles/admin/**/*.js linguist-vendored

# Keep our custom CSS files as part of the project
static/style.css linguist-vendored=false
"New folder/style.css" linguist-vendored=false

# Mark Django template HTML files as vendored to prioritize Python
templates/** linguist-vendored
**/templates/** linguist-vendored
tasks/templates/** linguist-vendored

# Django settings and configuration - explicitly mark as Python
manage.py linguist-language=Python
settings.py linguist-language=Python
urls.py linguist-language=Python
views.py linguist-language=Python
models.py linguist-language=Python
forms.py linguist-language=Python
admin.py linguist-language=Python

# Explicitly mark Python files with higher priority
*.py linguist-detectable=true
